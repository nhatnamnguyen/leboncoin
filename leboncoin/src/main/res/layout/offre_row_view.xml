<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background">

    <CheckBox 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
		android:id="@+id/offre_checkbox"
		android:checked="false"
		android:visibility="gone"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/offre_checkbox"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/default_padding"
        android:id="@+id/offre_thumb"
        android:src="@drawable/preview_image_default"
        />
    
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_toRightOf="@id/offre_thumb">
    
	    <TextView
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/offre_title"
        	android:textStyle="bold"
        	android:textColor="@color/list_item_text"
        	android:singleLine="true"
        	android:ellipsize="marquee"
        	android:paddingLeft="@dimen/default_padding"
        	android:text="Titre"
	    	/>
    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/default_padding"
	        android:orientation="horizontal">
	    	<TextView
	    	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:paddingLeft="@dimen/default_padding"
	        	android:id="@+id/offre_price"
	        	android:textColor="@color/list_item_text"
	        	android:text="Price"
	    	    />
	    	<TextView
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="right"
	        	android:paddingRight="@dimen/default_padding"
	        	android:id="@+id/offre_category"
	        	android:textColor="@color/list_item_text"
	        	android:text="Category"
	    	    />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/default_padding"
	        android:orientation="horizontal"> 
	    	<TextView
	    	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:paddingLeft="@dimen/default_padding"
	        	android:id="@+id/offre_localisation"
	        	android:textColor="@color/list_item_text"
	        	android:text="Localisation" 
	    	    />
	    	<TextView
	    	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="right"
	        	android:paddingRight="@dimen/default_padding"
	        	android:id="@+id/offre_date"
	        	android:textColor="@color/list_item_text"
	        	android:text="Date" 
	    	    />
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>
